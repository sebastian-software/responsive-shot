{
  "manifest_version": 3,
  "name": "ResponsiveShot",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "Capture full-page screenshots at any viewport size. Switch between device presets for quick responsive testing.",
  "author": "Sebastian Software GmbH",
  "homepage_url": "https://www.sebastian-software.de",
  "permissions": ["activeTab", "tabs", "downloads", "scripting", "debugger"],
  "minimum_chrome_version": "116",
  "action": {
    "default_popup": "popup.html",
    "default_title": "ResponsiveShot â€” Screenshot & Viewport Presets",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
